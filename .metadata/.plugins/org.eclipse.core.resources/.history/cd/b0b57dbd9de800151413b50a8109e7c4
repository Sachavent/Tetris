	// Get avec le numéro de la piece qu'on souhaite afficher
	public int[][] get_piece (int numberpiece){
		switch (numberpiece) {
		case 1:
			return Piece1;
		case 2:
			return Piece2;
		default: return null;
		}
		
	}

	
}
