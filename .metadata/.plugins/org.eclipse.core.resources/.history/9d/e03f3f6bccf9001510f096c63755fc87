package DeroulementJeuTest;

import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;

import DeroulementJeu.BlocagePieces;
import DeroulementJeu.Deroulement;
import GestionFichier.Pieces;

public class BlocagePieceTest {
	private Pieces pieces;
	private int[] position_courante;
	private int rotationcourante;
	@Before
	public void allocation(){
		rotationcourante=0;
		pieces= new Pieces();
		pieces.create_piece(2);
	}
	
	@Test
	public void shouldreturntrueforBloquedroite() {
		pieces.rotation_piececourante=0;
		boolean retour;
		retour=BlocagePieces.bloquedroite(position_courante,pieces.rotation_piececourante,Deroulement.getBoard(), Deroulement.getpiece_courante());
		assertEquals(true,retour);
	}

}
