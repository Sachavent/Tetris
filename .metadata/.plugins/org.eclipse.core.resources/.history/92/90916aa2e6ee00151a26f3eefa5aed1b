package GestionFichier;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.util.NoSuchElementException;
import java.util.Scanner;

public class EcritureFichier {
	public static void main(String[] args) {	
		final String chemin = "src/testFileWriter.txt";
	    File file = new File(chemin);
	    FileWriter fw;
	    FileReader fr;
			
	    try {
	      //Création de l'objet
	    /*  fw = new FileWriter(file);
	      String str = "Bonjour à tous, amis Zéros !\n";
	      str += "\tComment allez-vous ? \n";
	      //On écrit la chaîne
	      fw.write(str);
	      //On ferme le flux
	      fw.close();*/
				

	        //Lecture
	        fr = new FileReader(file);
	        // On crée un scanner qui va récupérer les int
	        Scanner scanner = new Scanner(file);
	        int scorerecupere;
	        int i=0;
	        int nombrevaleurarecup=4;
	        int nombreligne=0;
	        int[] valeursrecuperees= new int [5];
	        //Lecture des données
	        while((i = fr.read()) != -1 && nombrevaleurarecup>0) {
	        	System.out.println("valeur i: "+i);
		        scorerecupere=scanner.nextInt();
	        	System.out.println("score: "+ scorerecupere);
		        valeursrecuperees[nombreligne]=scorerecupere;
		        System.out.println("tableau :"+valeursrecuperees[nombreligne]);
		        nombreligne++;
		        nombrevaleurarecup--;
	        	
	        
	        }
	        //Affichage
	        
	        for (int compteur = 0; compteur < 5; compteur++) {
	        	System.out.println(valeursrecuperees[i]);
	        }

	    } 
	    catch (NoSuchElementException e)
        { 
        }
	    catch (FileNotFoundException e) {
	      e.printStackTrace();
	    } catch (IOException e) {
	      e.printStackTrace();
	    }
	  }
}
